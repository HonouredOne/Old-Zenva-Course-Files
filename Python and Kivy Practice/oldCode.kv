#:kivy 2.0.0

<FunkyButton>:
    canvas:
        Rectangle:
            pos: self.x + 50, self.y + 50
            size: 100, 100

    Button:
        pos: root.x + 100, root.y + 100
        size_hint: None, None
        size: 200, 200
        background_color: 0, 1, 1, 1

#:kivy 2.0.0

<GameScreen>:

    FloatLayout:
        pos: 0, 0
        size: root.width, root.height

        Button:
            text: 'Button 1'
            pos_hint: {'x': .1, 'y': .1}
            size_hint: .8, .1

        Button:
            text: 'Button 2'
            pos_hint: {'x': .1, 'y': .6}
            size_hint: .8, .1

        GridLayout:
            cols: 2
            pos_hint: {'x': .3, 'y': .3}
            size_hint: None, None
            size: root.width * .4, root.width * .4

            Button:
                text: 'Button 1'
            Button:
                text: 'Button 2'
            Button:
                text: 'Button 3'
            Button:
                text: 'Button 4'
                

        Label:
            text: 'Here is some text in a label.'
            pos_hint: {'x': .1, 'y': .8}
            size_hint: .8, .1
            halign: 'left'
            text_size: self.size
            font_size: 50
            bold: True
            color: 0, 1, 0, 1        